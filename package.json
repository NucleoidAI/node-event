{
  "name": "@nucleoidai/react-event",
  "version": "1.0.0",
  "description": "Event-driven Message Broker",
  "main": "index.js",
  "keywords": [
    "event"
  ],
  "scripts": {
    "test": "jest src",
    "start": "node sample/publisher/index.js && node sample/subscriber/index.js && npx nuc-node-event-test/server",
    "build": "npx tsc client/Event.ts --outDir client --declaration"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.8",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "babel-jest": "^29.3.0",
    "jest": "^29.3.0",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NucleoidAI/node-event.git"
  },
  "bugs": {
    "url": "https://github.com/NucleoidAI/node-event/issues"
  },
  "bin": {
    "server": "./server/server.js"
  },
  "exports": {
    "./client": {
      "import": "./client/Event.js",
      "require": "./client/Event.js",
      "types": "./client/Event.d.ts"
    },
    "./server": {
      "import": "./server/server.js",
      "require": "./server/server.js",
      "types": "./server/server.d.ts"
    }
  }
